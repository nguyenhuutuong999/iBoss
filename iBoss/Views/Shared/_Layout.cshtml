<script>
    $("#inform").click(function () {

        var id = (new Date).getMonth() + 1;
        alert(id)
          $.ajax({
                type: "POST",
                url: "@Url.Action("Inform", "Event")",
                data: { id: id },
                dataType: "json",

              success: function (data) {
                  alert(data)

                },
                error: function () {
                    alert("Error. Can't sent request !!!");

                },
            })



        $(".box-block").attr("style", "display:block");

    });

    $(".main-page").click(function (e) {
        $(".box-block").attr("style", "display:none");
    });

    $(document).ready(function () {

        $(".button-link").click(function () {
            $('.button-link').removeClass("active");
            $(this).addClass("active");


        })
    });
    $(document).ready(function () {
        $(".tab ").click(function () {
            $('.tab').removeClass("active");
            $(this).addClass("active");

            if ($(this).hasClass('tab-ques')) {
                $('.tab-content').hide();
                $('.content-ques').show();
            } else if ($(this).hasClass('tab-des')) {
                $('.tab-content').hide();
                $('.content-des').show();
            } else if ($(this).hasClass('tab-acc')) {
                $('.tab-content').hide();
                $('.content-acc').show();
            }
        })
    })
</script>